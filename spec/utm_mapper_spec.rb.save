require_relative 'spec_helper'
require_relative '../lib/utm_mapper'

describe Mapper::Base do
	before :all do
		@mapper = Mapper::Base.new
		expect{@mapper}.to_not raise_error
	end
	after :all do
		EM.stop
	end
	it 'Mapper instance create' do
		expect {@mapper}.to_not raise_error
	end
	it 'start reactor' do
		@mapper.run
		expect{EM.reactor_running?}.to eq true
	end
	it 'is reactor running?' do
		expect {EM.reactor_running?}.to eq true
	end
end
